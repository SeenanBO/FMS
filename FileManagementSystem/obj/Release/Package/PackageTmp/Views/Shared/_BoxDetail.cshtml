@using FileManagementSystem.ViewModels;
@{
    int counter = 1;
    FileViewModel FileList = ViewData["FileList"] as FileViewModel;
}


<table class="table table-striped table-responsive-sm datatable boxdetailDatatable" style="overflow-x:scroll;">
    <thead>
        <tr>
            <th>File BarCode</th>
            <th>Added By</th>
            <th>Added At</th>
            <th>Modified By</th>
            <th>Modified At</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (FileList != null)
        {
            if (FileList.FilesList != null)
            {
                if (FileList.FilesList.Count > 0)
                {
                    foreach (var obj in FileList.FilesList)
                    {
                        if (counter % 2 == 1)
                        {
                            <tr class="odd">
                                @if (obj.FileBarcode != null && obj.FileBarcode != "")
                                {
                                    <td>  @obj.FileBarcode  </td>
                                }
                                else
                                {
                                    <td>  N/A </td>
                                }

                                <td>  @obj.AddedBy  </td>
                                <td>  @obj.AddedTime  </td>
                                <td>  @obj.ModifiedBy  </td>
                                <td>  @obj.ModifiedTime  </td>
                                <td>
                                    <a data-fileid="@obj.Id" data-FileBarcode="@obj.FileBarcode" class="btn btn-warning  btnactions btnfileimg" title="View Image" href="javascript:void(0)">File&nbsp;<i class="fa fa-eye"></i></a>
                                </td>

                                <td class="text-center">
                                   <a data-fileid="@obj.Id" data-FileBarcode="@obj.FileBarcode" class="btn btn-danger btnactions filedelete" title="Delete File" href="javascript:void(0)"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                        else
                        {
                            <tr class="even">
                                @if (obj.FileBarcode != null && obj.FileBarcode != "")
                                {
                                    <td>  @obj.FileBarcode  </td>
                                }
                                else
                                {
                                    <td>  N/A  </td>
                                }

                                <td>  @obj.AddedBy  </td>
                                <td>  @obj.AddedTime  </td>
                                <td>  @obj.ModifiedBy  </td>
                                <td>  @obj.ModifiedTime  </td>
                                <td >
                                    <a data-fileid="@obj.Id" data-FileBarcode="@obj.FileBarcode" class="btn btn-warning  btnactions btnfileimg" title="View Image" href="javascript:void(0)">File&nbsp;<i class="fa fa-eye"></i></a>
                                </td>

                                <td class="text-center">
                                    <a data-fileid="@obj.Id" data-FileBarcode="@obj.FileBarcode" class="btn btn-danger btnactions filedelete" title="Delete File" href="javascript:void(0)"><i class="fa fa-trash"></i></a>
                                </td>
                            </tr>
                        }
                        counter++;
                    }
                }
            }

        }
    </tbody>
</table>


